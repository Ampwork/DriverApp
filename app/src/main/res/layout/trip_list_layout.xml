<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/layout_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/bus_marker" />

            <TextView
                android:id="@+id/routeNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_toRightOf="@id/imageView"
                android:text="Notification"
                android:textColor="@color/primaryColor"
                android:textSize="@dimen/subtitle_ts" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="@dimen/layout_padding"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tripDistanceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:text="Distance: 10.98 km"
                android:textSize="@dimen/desc_ts" />


            <TextView
                android:id="@+id/tripDurationTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:text="Duration: 10.98 km"
                android:textSize="@dimen/desc_ts" />

        </LinearLayout>

        <TextView
            android:id="@+id/tripDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="@dimen/layout_padding"
            android:text="2019-11-02"
            android:textSize="@dimen/small_ts" />




    </LinearLayout>

</com.google.android.material.card.MaterialCardView>